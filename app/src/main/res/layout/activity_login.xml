<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginVertical="64dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:gravity="center"
        android:fontFamily="@font/open_dyslexic_alta_bold"
        android:text="@string/login"
        android:textColor="@color/dark_blue"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:weightSum="10"
        android:background="@drawable/background_transparent_stroke_black_radius_8"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/icon_user"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:layout_weight="9"
            android:background="@null"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_dyslexic_regular"
            android:textSize="16sp"
            android:hint="@string/name"
            android:inputType="text"
            android:textColorHint="@color/dark_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="10"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_transparent_stroke_black_radius_8"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/icon_key"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:layout_weight="8"
            android:background="@null"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_dyslexic_regular"
            android:textSize="16sp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/dark_gray"/>

        <ImageView
            android:id="@+id/imageViewEye"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/icon_eye"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_dark_blue_radius_24"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_dyslexic_alta_bold"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>